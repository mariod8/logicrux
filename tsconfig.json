{
    "extends": "@tsconfig/node17/tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "target": "ES6",
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true
    },
    "exclude": ["node_modules", "build"],
    "include": ["src/**/*"]
}
